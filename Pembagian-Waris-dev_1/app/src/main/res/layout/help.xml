<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_help"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/lin_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/help_hitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:background="@drawable/button_trans"
            android:onClick="onClick"
            android:text="@string/help_hitung" />

        <Button
            android:id="@+id/help_materi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:background="@drawable/button_trans"
            android:onClick="onClick"
            android:text="@string/help_materi" />
    </LinearLayout>

</RelativeLayout>
