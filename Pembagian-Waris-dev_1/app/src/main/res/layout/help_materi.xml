<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_materi_cnt"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hm1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/img_materi1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/materi1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hm2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/img_materi2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/materi2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hm3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/img_materi3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/materi3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\n\n"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>